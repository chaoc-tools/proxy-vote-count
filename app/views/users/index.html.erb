<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Is shareholder</th>
      <th>First name</th>
      <th>Middle initial</th>
      <th>Last name</th>
      <th>Nickname</th>
      <th>Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.is_shareholder %></td>
        <td><%= user.first_name %></td>
        <td><%= user.middle_initial %></td>
        <td><%= user.last_name %></td>
        <td><%= user.nickname %></td>
        <td><%= user.building %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

